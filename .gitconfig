[user]
	name = philbev
	email = phil@philbev.co.uk
[alias]
	st = status
	l = log --decorate
	ci = commit
	br = branch
	co = checkout
[color "status"]
    added = green
    changed = red bold
    untracked = magenta bold
[color "diff"]
    new = magenta bold
    old = green bold
[merge]
	tool = vimdiff
[mergetool]
	prompt = false
[credential]
	helper = store
